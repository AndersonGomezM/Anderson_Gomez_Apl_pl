<Window x:Class="Anderson_Gomez_Ap1_p1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Anderson_Gomez_Ap1_p1"
        mc:Ignorable="d"
        Title="Registro de Colmado" Icon="/Resources/Colmado.ico" Height="200" Width="300">
    <Grid Background="#72757C" >

        <StackPanel> 
            <Menu> 
                <MenuItem Header="Registros" >
                    <!-- BOTON PARA EL REGISTRO -->
                    <MenuItem Header="Productos" x:Name="rProductos" Click ="RegistroMenuItem_Click" />
                </MenuItem>

                <MenuItem Header="Consultas" >
                    <!-- BOTON PARA LA CONSULTA -->
                    <MenuItem Header="Productos" x:Name="cProductos" Click ="ConsultaMenuItem_Click" />
                </MenuItem>
            </Menu>

        </StackPanel>

    </Grid>
</Window>
